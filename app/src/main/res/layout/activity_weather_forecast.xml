<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tran.androidlabs.WeatherForecast">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ProgressBar style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            />

    <ImageView
        android:id="@+id/currentWeatherpic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/currentweather"
        android:layout_below="@id/progressBar"
        android:visibility="invisible"

        />

    <TextView
        android:id="@+id/currentTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/currentWeatherpic"
        android:layout_below="@id/progressBar"
        android:text="Current Temperature" />


        <TextView
            android:id="@+id/minTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currentTemp"
            android:layout_toEndOf="@+id/currentWeatherpic"
            android:text="Min Temperature" />

    <TextView
        android:id="@+id/maxTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Temperature"
        android:layout_toRightOf="@id/currentWeatherpic"
        android:layout_below="@id/minTemp"
        />

        <TextView
            android:id="@+id/windSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/currentWeatherpic"
            android:layout_below="@id/maxTemp"
            android:text="Wind Speed"
            />





    </RelativeLayout>
</LinearLayout>
